<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
  <groupId>br.ufes.inf.lprm</groupId>
  <artifactId>scene</artifactId>
  <version>0.8.0</version>
  <packaging>jar</packaging>
  <name>SCENE</name>
  <properties>
    <drools.version>5.4.0.Final</drools.version>    
  </properties>
  <build>
      <plugins>
	<plugin>
	    <groupId>org.apache.maven.plugins</groupId>
	    <artifactId>maven-compiler-plugin</artifactId>
	    <version>2.0.2</version>
	    <configuration>
		<source>1.7</source>
		<target>1.7</target>
		<additionalBuildcommands>
		  <buildcommand>org.drools.eclipse.droolsbuilder</buildcommand>
		</additionalBuildcommands>
	    </configuration>
	</plugin>
	<plugin>
	  <groupId>org.apache.maven.plugins</groupId>
	  <artifactId>maven-jar-plugin</artifactId>
	  <version>2.3.2</version>
	  <configuration>
	  	<includes>
	  		<include>br/ufes/inf/lprm/scene/*</include>
	  		<include>br/ufes/inf/lprm/scene/spm/*</include>
	  		<include>br/ufes/inf/lprm/scene/base/evaluators/*</include>
	  		<include>br/ufes/inf/lprm/scene/base/*</include>
	  		<include>br/ufes/inf/lprm/scene/publishing/*</include>
	  		<include>br/ufes/inf/lprm/scene/publishing/sinos/*</include>
	  		<include>br/ufes/inf/lprm/scene/publishing/sinos/publisher/*</include>
	  	</includes>
	  </configuration>
	</plugin>
    </plugins>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ftp</artifactId>
        <version>1.0-beta-6</version>
      </extension>
    </extensions>    
  </build>
  <dependencies>
      <!--drools-->
      <dependency>
	  <groupId>org.drools</groupId>
	  <artifactId>knowledge-api</artifactId>
	  <version>${drools.version}</version>
	  <type>jar</type>
      </dependency>
      <dependency>
	  <groupId>org.drools</groupId>
	  <artifactId>drools-core</artifactId>
	  <version>${drools.version}</version>
	  <type>jar</type>
      </dependency>
      <dependency>
	  <groupId>org.drools</groupId>
	  <artifactId>drools-compiler</artifactId>
	  <version>${drools.version}</version>
	  <type>jar</type>
      </dependency>
      <dependency>
	  	<groupId>junit</groupId>
	  	<artifactId>junit</artifactId>
	  	<version>4.8.1</version>
	  	<scope>test</scope>
      </dependency>
	  <dependency>
       <groupId>br.ufes.inf.lprm</groupId>
       <artifactId>situation-api</artifactId>
       <version>0.7.0</version>
      </dependency>
	  <dependency>
    	<groupId>br.ufes.inf.lprm</groupId>
    	<artifactId>sinos.publisher</artifactId>
    	<version>0.4.3</version>
    	<scope>system</scope>
    	<systemPath>${project.basedir}/lib/sinos.publisher.0.4.3.jar</systemPath>
	  </dependency>      
  </dependencies>
  <repositories>
    <repository>
	<id>jboss</id>
	<name>jboss</name>
	<url>https://repository.jboss.org/nexus/content/groups/public/</url>
    </repository>
    <repository>
      <id>situation-api-repo</id>
      <name>situation-api-repo</name>
      <url>http://situation-api.juplo.com/maven2/</url>
    </repository>
  </repositories>
  <distributionManagement>
    <repository>
      <id>situation-api-repo</id>
      <url>ftp://situation-api.juplo.com/public_html/maven2/</url>
    </repository>
  </distributionManagement>    
</project>
